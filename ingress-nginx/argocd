    targetRevision: '*'
    helm:
      values: |
        controller:
          service:
            ports:
              - name: mqtts
                port: 8883
                protocol: TCP
                targetPort: 8883
          config:
            use-forwarded-headers: "true"
          extraArgs:
            - --tcp-services-configmap=$(POD_NAMESPACE)/tcp-services
  project: default
